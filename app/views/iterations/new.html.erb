<div class="row">
  <div class="col-3">
  </div>
  <div class="col-4">
  <%= form_for [@song, @iteration], :html => { :class => 'base-forms', multipart: true } do |f| %>
      <%= f.label :content %>
    <div class="form-group">
      <%= f.text_area :content, class:"input-medium" %>
    </div>
      <%= f.label :recording %>
    <div class="form-group">
      <%= f.text_field :recording %>
    </div>
      <%= f.label :comment %>
    <div class="form-group">
      <%= f.text_area :comment %>
    </div>
      <%= f.label :clip %>
    <div class="form-group">
      <%= f.file_field :clip %>
    </div>
    <div class="form-group">
      <%= f.submit "Create iteration", class:"submit-button btn" %>
    </div>
  </div>
</div>
<% end %>
