<div class="row">
  <div class="col-3">
  </div>
    <div class="col-4">
    <%= form_for(:session, url: login_path, :html => { :class => 'base-forms' }) do |f| %>
      <%= f.label :username %>
      <div class="form-group">
      <%= f.text_field :username %>
      </div>
      <%= f.label :password %>
      <div class="form-group">
      <%= f.password_field :password %>
      </div>
      <div class="form-group">
      <%= f.submit "Sign in", class:"submit-button btn"%>
    </div>
  </div>
</div>
<% end %>
