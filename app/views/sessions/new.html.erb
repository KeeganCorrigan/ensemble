<div class="col-sm-12 .col-centered text-center">
  <div class="profile-container">
    <%= form_for(:session, url: login_path, :html => { :class => 'align-forms' }) do |f| %>
      <%= f.label :username %>
      <div class="form-group">
      <%= f.text_field :username %>
      </div>
      <%= f.label :password %>
      <div class="form-group">
      <%= f.password_field :password %>
      </div>
      <div class="form-group">
      <%= f.submit "Sign in", class:"submit-button btn medium-button"%>
    </div>
  </div>
</div>
<% end %>
