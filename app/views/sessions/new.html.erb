<div class="all-forms">
    <%= form_for(:session, url: login_path, :html => { :class => 'base-forms' }) do |f| %>
      <%= f.label :username, class: "cool-label" %>
      <div class="form-group">
      <%= f.text_field :username, class: "form-width" %>
      </div>
      <%= f.label :password, class: "cool-label" %>
      <div class="form-group">
      <%= f.password_field :password, class: "form-width" %>
      </div>
      <div class="form-group">
      <%= f.submit "Sign in", class:"submit-button btn large-button"%>
  </div>
</div>

<% end %>
