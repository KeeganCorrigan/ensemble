<div class="col-sm-12 .col-centered text-center">
  <%= form_for @song, :html => { :class => 'align-forms' } do |f| %>
  <% if current_user && current_user.bands.exists? %>
      <%= f.label :title %>
    <div class="form-group">
      <%= f.text_field :title, class:"input-medium" %>
    </div>
      <%= f.label :timing %>
    <div class="form-group">
      <%= f.text_field :timing %>
    </div>
      <%= f.label :genre %>
    <div>
    <div class="form-group">
      <%= f.text_field :genre %>
    </div>
    <%= f.label :band %>
    <div class="form-group">
      <%= f.collection_select :band_id, current_user.bands.order(:name), :id, :name, {}, {class: "custom-select"} %>
    </div>
    <div class="form-group">
      <%= f.submit "Make the song", class:"submit-button btn medium-button" %>
    </div>
    <% else %>
      <p> You need a band to write a song!</p>
      <%= link_to "Create a band", new_musician_band_path(current_user), class:"btn large-button submit-button" %>
    <% end %>
</div>
<% end %>
