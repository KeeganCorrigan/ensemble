<h1> Songs </h1>
<% @songs.each do |song| %>
<%= link_to song_path(song) do %>
<div class="mp-container">
  <div class="picture-container">
    <% if song&.iterations&.last&.recording %>
      <i class="fas fa-play play-override"></i>
    <% else %>
      <i class="fas fa-microphone-alt-slash mic-override"></i>
    <% end %>
  </div>
  <div class="profile-container">
    <p class="profile-text"><strong>Name:</strong> <%= song.title %></p>
    <p class="profile-text"><strong>Genre:</strong> <%= song.genre %></p>
    <p class="profile-text"><strong>Timing:</strong> <%= song.timing %></p>
  </div>
  <div>
    <h4 class="profile-heading"><%= song.band.name %></h4>
  </div>
</div>
<% end %>

<% end %>
